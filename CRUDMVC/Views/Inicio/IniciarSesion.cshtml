@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body style="background-color: #f8f9fa;">
    <style>
        p {
            margin-bottom: 5px;
            margin-top: 5px;
        }
    </style>

    <div class="container mt-5 pt-5">

        <div class="row justify-content-center">
            <div class="col-12 col-xl-4 col-md-6 text-center">

                <img src="/SPiMx.png" alt="Logo" style="max-width: 250px;" class="mb-2" />

                <div class="card">
                    <div class="card-header" style="background-color: #d4722f; color: #fff;">
                        <h4 class="mb-0">
                            Iniciar Sesión
                        </h4>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">

                            <div class="input-group mb-3">
                                <span class="input-group-text" style="background-color: #d4722f; color: #fff;">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input class="form-control" type="email" placeholder="Correo electrónico" required name="email" />
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" style="background-color: #d4722f; color: #fff;">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input class="form-control" type="password" placeholder="Contraseña" required name="password" />
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit" style="background-color:#d4722f">
                                    <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                                </button>
                            </div>
                            @if (ViewData["Mensaje"] != null)
                            {
                                <div class="form-group">
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                </div>
                            }
                            <p>
                                ¿No tienes una cuenta? <a href="@Url.Action("Registrarse", "Inicio")">Regístrate</a>
                            </p>
                            <p>
                                ¿Olvidaste tu contraseña? <a href="@Url.Action("RecuperarPassword", "Inicio")">Recupérala</a>
                            </p>

                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



